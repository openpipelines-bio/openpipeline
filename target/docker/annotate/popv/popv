  ViashDockerSetup 'ghcr.io/openpipelines-bio/annotate/popv:1.0.0' "$VIASH_DOCKER_SETUP_STRATEGY"
  exit 0
fi
ViashDockerSetup 'ghcr.io/openpipelines-bio/annotate/popv:1.0.0' ifneedbepullelsecachedbuild

