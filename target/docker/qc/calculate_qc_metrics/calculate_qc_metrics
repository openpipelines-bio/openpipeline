trap clean_up EXIT
trap interrupt INT SIGINT
cat > "\$tempscript" << 'VIASHMAIN'
import sys
from mudata import read_h5mu
from scipy.sparse import issparse, isspmatrix_coo, csr_matrix
from sklearn.utils.sparsefuncs import mean_variance_axis
import numpy as np

