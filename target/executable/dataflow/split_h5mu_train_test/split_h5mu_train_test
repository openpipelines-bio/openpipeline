  'val_size': $( if [ ! -z ${VIASH_PAR_VAL_SIZE+x} ]; then echo "float(r'${VIASH_PAR_VAL_SIZE//\'/\'\"\'\"r\'}')"; else echo None; fi ),
  'shuffle': $( if [ ! -z ${VIASH_PAR_SHUFFLE+x} ]; then echo "r'${VIASH_PAR_SHUFFLE//\'/\'\"\'\"r\'}'.lower() == 'true'"; else echo None; fi ),
  'random_state': $( if [ ! -z ${VIASH_PAR_RANDOM_STATE+x} ]; then echo "int(r'${VIASH_PAR_RANDOM_STATE//\'/\'\"\'\"r\'}')"; else echo None; fi )
