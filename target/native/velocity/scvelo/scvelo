  'n_principal_components': $( if [ ! -z ${VIASH_PAR_N_PRINCIPAL_COMPONENTS+x} ]; then echo "int(r'${VIASH_PAR_N_PRINCIPAL_COMPONENTS//\'/\'\"\'\"r\'}')"; else echo None; fi ),
