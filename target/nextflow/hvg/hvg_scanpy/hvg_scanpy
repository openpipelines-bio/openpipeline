            shift 1
            ;;
        --flavor)
            VIASH_PAR_FLAVOR="$2"
            shift 2
            ;;
        --flavor=*)
            VIASH_PAR_FLAVOR=$(ViashRemoveFlags "$1")
            shift 1
            ;;
