  echo "Seurat flavored HVG as described by Satija, 2015."
  echo
  echo "Options:"

  echo "   -i, --input"
  echo "        type: file, required parameter"
  echo "        example: input.h5mu"
  echo "        Input h5mu file"
  echo ""


  echo "   -o, --output"
  echo "        type: file, output"
  echo "        example: output.h5mu"
  echo "        Output h5mu file"
  echo ""


  echo "   --excluded_genes"
  echo "        type: string"
  echo "        default: "
  echo "        Genes to exclude from the highly variable genes. This can be of use when performing for example analysis on B/T cells which have variable genes that should not be taken into account."
  echo ""


  echo "   --flavor"
  echo "        type: string"
  echo "        default: seurat"
  echo "        The flavor to select for highly variable genes. Default seurat, other options seurat_v3 or cell_ranger"
  echo ""

}

